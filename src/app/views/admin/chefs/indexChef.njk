{% extends "admin/chefs/layout.njk" %}

{% block content %}

    <main>
        <div class="subtitulo">
            <h2>Gerenciar chefs</h2>
        </div>

        <section class="cards_chefs">
            {% for chef in chefs %}
                <div class="chef_container">
                       {# <div class="card" id="{{items.indexOf(item)}}">  #}
                    <div class="chef_image">
                        <img src="{{chef.avatar_url}}" alt="Imagen de{{chef.title}}">
                    </div>
                    <div class="chef_info">
                        <h2>{{chef.name}}</h2>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>

{% endblock %}

