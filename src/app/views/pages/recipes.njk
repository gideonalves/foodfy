{% extends "pages/layout.njk" %}



{% block content %}

    <main>   
          <div class="subtitulo">
                <h2>Mais acessadas</h2>
            </div> 
        <section class="cards">          

            {% for item in items %}
                <div class="card" id="{{ items.indexOf(item) }}">
                    <div class="card__image">
                        <img src="{{item.image}}" alt="{{item.title}}">
                    </div>
                    <div class="card__info">
                        <h2>{{item.title}}</h2>
                        <p>{{item.author}}</p>
                    </div>
                </div>
            {% endfor %}

        </section>

</main>
{% endblock %}