{% extends "admin/layout.njk" %}

{% block content %}

    <main>
        <div class="subtitulo">
            <h2>Gerenciar receitas</h2>
        </div>

        <section class="cards">
            {% for recipe in recipes %}
                <div class="card_container">
                    <div class="card__image">
                        <img 
                            src="{{recipe.image}}" 
                            alt="Imagen de{{recipe.title}}">
                    </div>
                    <div class="card__info">
                        <h2>{{recipe.title}}</h2>
                        <p>por {{recipe.name}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>

{% endblock %}

